import "std:c"

add :: void(a int*) {
    *a += 1
}

print :: void(a int) {
    printf(to_cstring("%d\n"), a)
}

main :: void() {
    var ns = [10]int{0, 2}
    ns[0] = 0
    printf(to_cstring("%d\n"), ns[0])
    add(&ns[0])
    printf(to_cstring("%d\n"), ns[0])
    var z = &ns[1]
    print(*z)
    *z += 1
    printf(to_cstring("%d\n"), *z)
}
